{
    "env": {
        "defaultIncludePath": [
            "${workspaceFolder}"
        ]
    },
    "configurations": [
        {
            "name": "linux",
            "intelliSenseMode": "gcc-x64",
            "includePath": [
                "${defaultIncludePath}",
                "${workspaceFolder}/exts/glew/include",
                "${workspaceFolder}/exts/glfw/include"
            ],
            "cppStandard": "c++17",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}